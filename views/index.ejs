<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>URL Shortener</title>
  </head>
  <body>
    <div class="container">
      <h1>URL Shrinker</h1>
      <form
        action="/shortUrls"
        method="POST"
        class="my-4 form-inline w-100 d-inline-flex"
      >
        <label for="fullURL" class="visually-hidden">URL</label>
        <input
          type="url"
          required
          placeholder="URL"
          name="fullURL"
          id="fullURL"
          class="form-control col me-2"
        />
        <button class="btn btn-success" type="submit">Shrink!</button>
      </form>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th id="fu">Full URL</th>
            <th id="su">Short URL</th>
            <th id="clicks">Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
